{
    "name": "prondubuisi/weightcon",
    "description": "PHP weight converter",
    "keywords": [
        "prondubuisi",
        "weightcon"
    ],
    "homepage": "https://github.com/prondubuisi/weightcon",
    "license": "MIT",
    "authors": [
        {
            "name": "Ndubuisi Onyemenam",
            "email": "onyemenamndu@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Prondubuisi\\Weightcon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prondubuisi\\Weightcon\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
